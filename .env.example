# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (Server-side only)
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PROJECT_ID=your_project_id

# Development Environment
NODE_ENV=development
NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true

# Application Settings
NEXT_PUBLIC_APP_NAME="Micro Lending System"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_LANGUAGE=both
NEXT_PUBLIC_CURRENCY=LKR

# Authentication Settings
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED=false
NEXT_PUBLIC_FACEBOOK_AUTH_ENABLED=false
NEXT_PUBLIC_MFA_ENABLED=true
NEXT_PUBLIC_MFA_ENFORCED=false

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your_jwt_secret_here

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Email Service (Optional)
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME="Micro Lending System"

# SMS Service (Optional)
SMS_SERVICE_API_KEY=your_sms_service_key
SMS_SERVICE_SENDER_ID=your_sender_id

# Payment Gateway Integration (Future)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_MERCHANT_ID=your_merchant_id
EZCASH_API_KEY=your_ezcash_key
EZCASH_MERCHANT_ID=your_ezcash_merchant
MCASH_API_KEY=your_mcash_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Logging
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_REPORTING=true

# Database Backup
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=your_backup_bucket

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ENABLE_ANALYTICS=true

# Development Tools
ANALYZE_BUNDLE=false
ENABLE_SOURCE_MAPS=false

# Deployment
BUILD_STANDALONE=false
BASE_URL=http://localhost:3000

# Business Configuration
COMPANY_NAME_EN="Micro Lending System"
COMPANY_NAME_SI="සූක්ෂම් ණයදාන පද්ධතිය"
COMPANY_PHONE=+94712345678
COMPANY_EMAIL=info@yourdomain.com
COMPANY_ADDRESS_EN="123 Main Street, Colombo 01"
COMPANY_ADDRESS_SI="ප්‍රධාන පාර 123, කොළඹ 01"

# Interest Rates
DEFAULT_INTEREST_RATE=10
MAX_INTEREST_RATE=50
PENALTY_RATE=2
GRACE_PERIOD_DAYS=3

# Loan Limits
MIN_LOAN_AMOUNT=1000
MAX_LOAN_AMOUNT=5000000
DEFAULT_LOAN_DURATION=10
MAX_LOAN_DURATION=52

# System Settings
TIMEZONE=Asia/Colombo
DATE_FORMAT=DD/MM/YYYY
CURRENCY_SYMBOL=Rs.
DECIMAL_PLACES=2

# Working Hours
BUSINESS_START_TIME=08:00
BUSINESS_END_TIME=17:00
WORKING_DAYS=1,2,3,4,5,6
# Days: 0=Sunday, 1=Monday, 2=Tuesday, 3=Wednesday, 4=Thursday, 5=Friday, 6=Saturday

# Collection Settings
REMINDER_DAYS_BEFORE_DUE=2
OVERDUE_REMINDER_INTERVAL=7
MAX_COLLECTION_ATTEMPTS=5
DEFAULT_COMMISSION_RATE=5

# Feature Flags
ENABLE_DIGITAL_PAYMENTS=false
ENABLE_QR_PAYMENTS=false
ENABLE_OFFLINE_MODE=true
ENABLE_GEOLOCATION=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_CUSTOMER_PORTAL=false